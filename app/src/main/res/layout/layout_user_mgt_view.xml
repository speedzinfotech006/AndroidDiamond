<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSrNo"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SR"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <TextView
            android:id="@+id/tvCreateDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create Date"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User Name"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />


        <TextView
            android:id="@+id/tvCompName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Company Name"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <TextView
            android:id="@+id/tvCustName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Customer Name"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <TextView
            android:id="@+id/tvEmailId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EmailID"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <TextView
            android:id="@+id/tvMobileNo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mobile No"
            android:textColor="@color/black"
            app:fontFamily="@font/proxima_nova"
            android:paddingVertical="5dp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Search\nStock"
                android:textColor="@color/white"
                android:background="@drawable/shape_yes"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/proxima_nova"
                android:layout_centerInParent="true"
                android:padding="6dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSearchStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Search\nStock"
            android:textColor="@color/white"
            android:background="@drawable/shape_yes"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="@font/proxima_nova"
            android:layout_centerInParent="true"
            android:padding="6dp"
            />

        </RelativeLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPlaceOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Place\nOrder"
                android:textColor="@color/white"
                android:background="@drawable/shape_yes"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/proxima_nova"
                android:layout_centerInParent="true"
                android:padding="6dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOrderHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Order\nHistory"
                android:textColor="@color/white"
                android:background="@drawable/shape_yes"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/proxima_nova"
                android:layout_centerInParent="true"
                android:padding="6dp"
                />

        </RelativeLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My\nCart"
                android:textColor="@color/white"
                android:background="@drawable/shape_yes"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/proxima_nova"
                android:layout_centerInParent="true"
                android:padding="6dp"
                />

        </RelativeLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />


        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMyWishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My\nWishlist"
                android:textColor="@color/white"
                android:background="@drawable/shape_yes"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/proxima_nova"
                android:layout_centerInParent="true"
                android:padding="6dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvQuickSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Quick\nSearch"
                android:textColor="@color/white"
                android:background="@drawable/shape_yes"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/proxima_nova"
                android:layout_centerInParent="true"
                android:padding="6dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivUpdate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="9dp"
                android:layout_marginLeft="10dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_update1"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="7dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_delete"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/darkGray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />

</LinearLayout>