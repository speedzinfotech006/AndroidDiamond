<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvStoneID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/proxima_nova" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="&amp;"
                        app:fontFamily="@font/proxima_nova" />

                    <TextView
                        android:id="@+id/tvCertiNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/proxima_nova" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Color"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvColor"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Cut"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvCut"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Fls"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvFls"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Disc"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvDisc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Clarity"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvClarity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Polish"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvPolish"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="BGM"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvShade"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Amt"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvAmt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Cts"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvCts"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Sym"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvSym"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2.5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Loc"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Price/Cts"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                                <TextView
                                    android:id="@+id/tvPriceCts"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="13sp"
                                    app:fontFamily="@font/proxima_nova" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imgPR"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pr_stone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4.5"
                                android:text="Measurements"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvMsrmnt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.5"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4.5"
                                android:text="Pointer"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvPointer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.5"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4.5"
                                android:text="Lab"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvLab"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.5"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4.5"
                                android:text="Total Depth (%)"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvTotalDepth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.5"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4.5"
                                android:text="Table (%)"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvTablePer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.5"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status : "
                        android:textSize="13sp"
                        app:fontFamily="@font/proxima_nova" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:background="@color/green"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:fontFamily="@font/proxima_nova" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_plus"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>