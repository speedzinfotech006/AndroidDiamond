<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvStoneID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#8B53DA"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/proxima_nova" />

                    <TextView
                        android:id="@+id/tvLab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:fontFamily="@font/proxima_nova" />

                    <TextView
                        android:id="@+id/tvCertiNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#8B53DA"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/proxima_nova" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:background="@color/green"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:fontFamily="@font/proxima_nova" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/imgLocation"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_hk" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_plus"
                        android:tint="@color/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Color : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cut : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvCut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rap Price($) : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvRapPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clarity : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvClarity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Polish : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvPolish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disc : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvDisc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvCts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Symm : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvSym"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Net Amt($) : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvAmt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mes : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvMsrmnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="12sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fls : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvFls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price/Cts : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvPriceCts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAdvView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgPR"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgPR"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shape : "
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                            <TextView
                                android:id="@+id/tvShape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                app:fontFamily="@font/proxima_nova" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rap Amt($) : "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/proxima_nova" />

                        <TextView
                            android:id="@+id/tvRapAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            app:fontFamily="@font/proxima_nova" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BGM : "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            app:fontFamily="@font/proxima_nova" />

                        <TextView
                            android:id="@+id/tvBgm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            app:fontFamily="@font/proxima_nova" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgPR"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgPR"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgVideo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_round_card"
                        android:padding="9dp"
                        android:src="@drawable/ic_video"/>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/imgCerti"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_round_card"
                        android:padding="8dp"
                        android:src="@drawable/ic_certi"
                        android:tint="@color/colorPrimary" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>